// ============================================================================
// WHATSAPP CHAT SYSTEM
// ============================================================================

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  STICKER
  LOCATION
  CONTACT
  LINK
}

enum MessageStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}

// Contato do WhatsApp (pode ou não ser um Lead)
model WhatsAppContact {
  id            String  @id @default(cuid())
  phone         String  @unique // Formato: 5511999999999
  name          String? // Nome do contato
  profilePicUrl String? // URL da foto de perfil

  // Vinculação com Lead (opcional)
  leadId String? @unique
  lead   Lead?   @relation(fields: [leadId], references: [id])

  // Metadados
  isBlocked  Boolean   @default(false)
  lastSeenAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  conversations WhatsAppConversation[]
  messages      WhatsAppMessage[]

  @@index([phone])
  @@index([leadId])
  @@map("whatsapp_contacts")
}

// Conversa (agrupamento de mensagens com um contato)
model WhatsAppConversation {
  id        String @id @default(cuid())
  contactId String

  // Estado da conversa
  lastMessageAt      DateTime @default(now())
  lastMessagePreview String? // Prévia da última mensagem
  unreadCount        Int      @default(0)
  isArchived         Boolean  @default(false)
  isPinned           Boolean  @default(false)

  // Flags de sincronização (sistema de cache inteligente)
  fullySynced        Boolean   @default(false) // Indica se todas as mensagens foram sincronizadas
  lastSyncedAt       DateTime? // Última vez que sincronizou mensagens
  syncedMessageCount Int       @default(0) // Total de mensagens sincronizadas

  // Atribuição (quem está atendendo)
  assignedToId String?
  assignedTo   User?   @relation(fields: [assignedToId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  contact  WhatsAppContact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  messages WhatsAppMessage[]

  @@index([contactId])
  @@index([lastMessageAt])
  @@index([unreadCount])
  @@index([assignedToId])
  @@index([fullySynced])
  @@map("whatsapp_conversations")
}

// Mensagem individual
model WhatsAppMessage {
  id             String @id @default(cuid())
  conversationId String
  contactId      String

  // Conteúdo
  type         MessageType
  content      String // Texto ou caption
  mediaUrl     String? // URL do arquivo (se houver mídia)
  mediaType    String? // MIME type
  mediaSize    Int? // Tamanho em bytes
  thumbnailUrl String? // Miniatura (para vídeos/imagens)

  // Direção
  fromMe Boolean // true = enviada por nós, false = recebida

  // Status (apenas para mensagens enviadas)
  status MessageStatus @default(PENDING)

  // IDs externos (WhatsApp)
  whatsappMessageId String? @unique // ID da mensagem no WhatsApp

  // Timestamps
  timestamp   DateTime  @default(now())
  deliveredAt DateTime?
  readAt      DateTime?

  // Metadados
  metadata  String? // JSON: dados extras (localização, contato, etc)
  isDeleted Boolean @default(false)

  // Relações
  conversation WhatsAppConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  contact      WhatsAppContact      @relation(fields: [contactId], references: [id])

  @@index([conversationId])
  @@index([contactId])
  @@index([timestamp])
  @@index([fromMe])
  @@index([whatsappMessageId])
  @@map("whatsapp_messages")
}

