enum EventType {
  LEAD_CREATED
  LEAD_UPDATED
  LEAD_STATUS_CHANGED
  LEAD_DELETED
  COMMUNICATION_SENT
  COMMUNICATION_FAILED
  WHATSAPP_MESSAGE_RECEIVED
  WHATSAPP_MESSAGE_SENT
  AUTOMATION_EXECUTED
  AUTOMATION_FAILED
  WEBHOOK_TRIGGERED
  API_KEY_CREATED
  API_KEY_REVOKED
}

model EventLog {
  id            String    @id @default(cuid())

  // Event info
  eventType     EventType
  eventName     String // Nome descritivo do evento

  // Resource info
  resourceType  String // "Lead", "Communication", "Automation"
  resourceId    String

  // Metadata
  userId        String?
  apiKeyId      String?
  payload       String  @db.Text // JSON com dados do evento

  // Timestamps
  timestamp     DateTime @default(now())

  @@index([eventType])
  @@index([resourceType])
  @@index([resourceId])
  @@index([timestamp])
  @@index([userId])
  @@index([apiKeyId])
  @@map("event_logs")
}

