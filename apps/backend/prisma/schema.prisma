  EXPIRED
}

model ApiKey {
  id             String       @id @default(cuid())
  name           String // Nome descritivo: "Zapier Integration", "Mobile App"
  key            String       @unique // Chave p√∫blica: pk_live_abc123...
  secretHash     String // Hash bcrypt do secret: sk_live_xyz789...
  type           ApiKeyType   @default(WRITE)
  status         ApiKeyStatus @default(ACTIVE)

  // Scopes e permiss√µes
  scopes         String // JSON array: ["leads:read", "leads:write", "communications:write"]

  // Rate limiting
  rateLimitPerHour Int @default(1000)
  rateLimitPerDay  Int @default(10000)

  // Seguran√ßa
  ipWhitelist    String? // JSON array de IPs/CIDR permitidos
  allowedOrigins String? // JSON array de origins permitidos (CORS)

  // Metadata
  userId         String // Usu√°rio que criou a API key
  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Rastreamento
  lastUsedAt     DateTime?
  usageCount     Int       @default(0)

  // Expira√ß√£o
  expiresAt      DateTime?

  // Timestamps
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Rela√ß√µes
  usageLogs      ApiUsageLog[]
  webhooks       Webhook[]

  @@index([key])
  @@index([userId])
  @@index([status])
  @@index([expiresAt])
  @@map("api_keys")
}

// ============================================================================
// TABELA: ApiUsageLog (Log de Uso da API)
// ============================================================================

model ApiUsageLog {
  id            String   @id @default(cuid())
  apiKeyId      String
  apiKey        ApiKey   @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  // Request info
  method        String // GET, POST, PUT, DELETE
  endpoint      String // /api/v1/external/leads
  statusCode    Int // 200, 404, 500

  // Performance
  responseTime  Int // Milissegundos

  // Metadata
  ipAddress     String
  userAgent     String?
  requestBody   String? @db.Text // JSON (sanitizado)
  responseBody  String? @db.Text // JSON (sanitizado)
  errorMessage  String?

  // Timestamps
  timestamp     DateTime @default(now())

  @@index([apiKeyId])
  @@index([timestamp])
  @@index([endpoint])
  @@map("api_usage_logs")
}

// ============================================================================
// TABELA: Webhook (Webhooks de Eventos)
// ============================================================================

enum WebhookStatus {
  ACTIVE
  PAUSED
  FAILED
}

model Webhook {
  id            String        @id @default(cuid())
  apiKeyId      String
  apiKey        ApiKey        @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  // Configura√ß√£o
  url           String // URL de destino
  events        String // JSON array: ["lead.created", "lead.updated", "communication.sent"]
  secret        String // Secret para HMAC signature
  status        WebhookStatus @default(ACTIVE)

  // Metadata
  name          String?
  description   String?

  // Retry config
  maxRetries    Int           @default(3)
  retryDelay    Int           @default(60000) // Milissegundos

  // Rastreamento
  lastTriggeredAt DateTime?
  failureCount    Int       @default(0)
  successCount    Int       @default(0)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Rela√ß√µes
  deliveries    WebhookDelivery[]

  @@index([apiKeyId])
  @@index([status])
  @@map("webhooks")
}

// ============================================================================
// TABELA: WebhookDelivery (Hist√≥rico de Entregas de Webhooks)
// ============================================================================

enum WebhookDeliveryStatus {
  PENDING
  SUCCESS
  FAILED
  RETRYING
}

model WebhookDelivery {
  id            String                 @id @default(cuid())
  webhookId     String
  webhook       Webhook                @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  // Event info
  event         String // "lead.created", "communication.sent"
  payload       String @db.Text // JSON

  // Delivery info
  status        WebhookDeliveryStatus @default(PENDING)
  attempts      Int                   @default(0)
  maxAttempts   Int                   @default(3)

  // Response info
  statusCode    Int?
  responseBody  String? @db.Text
  errorMessage  String?

  // Performance
  responseTime  Int? // Milissegundos

  // Timestamps
  createdAt     DateTime @default(now())
  lastAttemptAt DateTime?
  nextAttemptAt DateTime?
  completedAt   DateTime?

  @@index([webhookId])
  @@index([status])
  @@index([event])
  @@index([createdAt])
  @@index([nextAttemptAt])
  @@map("webhook_deliveries")
}

