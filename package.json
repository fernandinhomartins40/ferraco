{
  "name": "ferraco-monorepo",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "description": "Ferraco CRM - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@ferraco/frontend",
    "dev:frontend": "npm run dev --workspace=@ferraco/frontend",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=@ferraco/backend",
    "build:frontend": "npm run build --workspace=@ferraco/frontend",
    "prisma:generate": "npm run prisma:generate --workspace=@ferraco/backend",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.16.5",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "jsdom": "^27.0.0",
    "lovable-tagger": "^1.1.9",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  }
}
