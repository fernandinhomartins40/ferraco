# ==========================================
# FERRACO CRM - Frontend Production Environment
# Domain: painelcheckar.com.br
# ==========================================
# This file is used during Docker build for production

# Frontend Configuration
VITE_APP_NAME="Ferraco CRM"
VITE_API_URL="/api"
VITE_APP_VERSION="1.0.0"
VITE_USE_MOCK_API=false

# Production Configuration
NODE_ENV=production

# ==========================================
# BACKEND CONFIGURATION (.env in ferraco-backend/)
# ==========================================
# Copy this section to ferraco-backend/.env

# ==========================================
# JWT Configuration (REQUIRED)
# ==========================================
# CRITICAL: Generate a strong random secret for production!
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARACTERS

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=file:/app/backend/data/ferraco.db

# ==========================================
# Application Settings
# ==========================================
NODE_ENV=production
PORT=3002
LOG_LEVEL=info

# ==========================================
# Security Settings
# ==========================================
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT_MINUTES=15
SESSION_TIMEOUT_MINUTES=60

# ==========================================
# SSL/HTTPS Configuration
# ==========================================
# Email for Let's Encrypt SSL certificate notifications
CERTBOT_EMAIL=admin@painelcheckar.com.br

# ==========================================
# Domain Configuration
# ==========================================
DOMAIN=painelcheckar.com.br
WWW_DOMAIN=www.painelcheckar.com.br

# ==========================================
# Optional: Email Configuration (SMTP)
# ==========================================
# Uncomment and configure if you need email functionality
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@painelcheckar.com.br

# ==========================================
# Optional: External Services
# ==========================================
# Add your external service API keys here
# STRIPE_API_KEY=
# SENDGRID_API_KEY=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
