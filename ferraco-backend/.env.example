# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=development
PORT=3002
APP_NAME=Ferraco CRM API

# ==========================================
# DATABASE
# ==========================================
DATABASE_URL=file:./data/ferraco.db

# ==========================================
# JWT
# ==========================================
JWT_SECRET=change-this-to-a-secure-random-string-min-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ==========================================
# CORS
# ==========================================
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://localhost:5173

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
