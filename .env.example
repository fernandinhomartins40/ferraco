# ==========================================
# FERRACO CRM - Environment Configuration
# ==========================================
# Copy this file to .env and update the values

# ==========================================
# Frontend Configuration (Build Time)
# ==========================================
VITE_APP_NAME="Ferraco CRM"
VITE_API_BASE_URL="/api"
VITE_APP_VERSION="2.0.0"

# ==========================================
# Backend Configuration (Runtime)
# ==========================================
# Environment (development, production)
NODE_ENV=production

# Backend API Port (internal - nginx proxies to this)
PORT=3002

# ==========================================
# JWT Configuration
# ==========================================
# IMPORTANT: Change this to a strong random secret in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-this-secret-in-production-minimum-32-characters-long

# ==========================================
# Database Configuration
# ==========================================
# SQLite database path (relative to backend directory)
DATABASE_URL=file:/app/backend/data/ferraco.db

# ==========================================
# Logging
# ==========================================
# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# ==========================================
# Security Settings
# ==========================================
# Maximum login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5

# Login timeout in minutes after failed attempts
LOGIN_TIMEOUT_MINUTES=15

# Session timeout in minutes of inactivity
SESSION_TIMEOUT_MINUTES=60